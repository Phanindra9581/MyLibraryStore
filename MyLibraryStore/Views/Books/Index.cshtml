@model IEnumerable<Book>

@{
    ViewBag.Title = "Books";
}

<h1>List of Books</h1>

@if (Model.Count() == 0)
{
    <h3>No Books</h3>
}
else
{
    <ul class="list-group">
        @foreach (var book in Model)
        {
        <li class="list-group-item">
            <a asp-action="Details" asp-route-id="@book.Id" asp-controller="Books">@book.BookName</a>

            <lu>
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id"> Edit</a>|
                <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id"> Delete</a>
            </lu>
            @* @book.BookName*@
        </li>
        }
    </ul>
}




